	function adm_art_gettext($text,$href,$tpl)
	{
		$size = $tpl["block"];
		if(!isset($size)) 		$size = 1000;

		$buff = substr($text,0,$size);


        $arr = explode(" ",$buff);


        for($i=0;$i<=count($arr);$i++)
        {
        	 if($i == count($arr) - 3)
        	 {
        	 	$ret .="<span class = art_text_link>";

        	 }

        	 $ret .=$arr[$i] . " ";
        }
        $ret .= "</span>";


		return $ret;
	}
	
